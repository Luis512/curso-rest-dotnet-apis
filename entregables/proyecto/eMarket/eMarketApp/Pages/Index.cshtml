@page
@model eMarketApp.Pages.Login.IndexModel
@{
    Layout = "~/Pages/Shared/_LoginLayout.cshtml"; ;
}

    <div class="container">
        <div class="container">
            <body class="text-center">
                @using (Html.BeginForm())
                {
                    <h1 class="h3 mb-3 font-weight-normal">Iniciar Sesion</h1>
                    <div class="input-group mb-3">
                        <span class="input-group-text">Usuario</span>
                        @Html.EditorFor(m => m.loginUser.Username, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text">Password</span>
                        @Html.EditorFor(m => m.loginUser.Password, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <input type="submit" class="btn btn-lg btn-primary btn-block" asp-page-handler="Login" value="Sign In" />
                }
            </body>
            </div>
        </div>
